{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width":250,
  "height":300,
  "title": "Energy Consumption by Sector",
  "data": {
    "url": "https://raw.githubusercontent.com/hansi18/FIT3179/refs/heads/main/final/data/sectors.csv",
    "format": {
      "type": "csv"
    }
  },
  "transform": [
    {
      "filter": "datum.Sector !== null" 
    }
  ],
  "selection": {
  "sector_highlight": {
  "type": "multi",
  "fields": ["Sector"],
  "bind": "legend"
  }
  },

  "mark": {
    "type": "arc",
    "innerRadius": 50
  },
  "encoding": {
    "theta": {
      "field": "Value",  
      "type": "quantitative"
    },
    "color": {
      "field": "Sector",  
      "type": "nominal",
      "legend": {"title": "Choose Sectors"},
      "scale": {
            "domain": [
              "Non energy",
              "Agriculture",
              "Transport",
              "Industrial",
              "Commercial",
              "Residential",
              "Co-generation",
              "Power station"
            ],
            "range": [
              "#1f77b4",
              "#ff7f0e",
              "#dbdb44",
              "#d62728",
              "#9467bd",
              "#8c564b",
              "#e377c2",
              "#7f7f7f"
            ]
          }
    },
    "opacity": {
    "condition": {"selection": "sector_highlight", "value": 0.8},
    "value": 0.2
    },

     "tooltip": [
          {"field": "Sector", "type": "nominal"},
          {"field": "Value", "type": "quantitative", "title":"Consumption in ktoe"}
        ]
  },
  "view": {
    "stroke": null
  }
}
